## quick commands

#alias ctar='tar cvzf \!:1.tar.gz \!:1'
function ctar() {
  tar cvzf $1.tar.gz $1
}

#alias xtar='tar xvzf \!:1'
function xtar() {
  tar xvzf $1
}

#alias findn='find . -name \!:1'
function findn() {
  find . -name "$1"
}

function mkcd() {
  mkdir -p $1;
  pushd $1;
}

function ppjson() {
# pretty print json file
  python -m json.tool $1 > $1.pp
}

function pretty_csv {
  perl -pe 's/((?<=,)|(?<=^)),/ ,/g;' "$@" | column -t -s, | less  -F -S -X -K
}

function scpToAny {
  scp -r $1 vivekag@$3:$2
}

function scpFromAny {
  scp -r vivekag@$3:$1 $2
}

function awkColumn {
  awk '{print $'$1'}' $2
}

function svenv {
  source $1/bin/activate
}

function gpu_pids {
  rocm-smi --showpids | awk '{print $1}'  | head -n -2 | tail -n+7 | xargs -L1 ps -u -p
}

function dockerInspect {
  docker inspect $1 |less
}
